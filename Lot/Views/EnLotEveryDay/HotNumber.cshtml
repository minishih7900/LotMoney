@model  Lot.Models.Models.SelectLotNumber
@{
    ViewBag.Title = "加州天天樂-熱門牌";
}

@section css{
    <style type="text/css">
        .table-hover thead tr th, .table-hover tbody tr td {
            text-align: center;
        }

        .table-hover tbody tr th {
            background-color: aliceblue;
            text-align: center;
        }
    </style>
}

<div class="row">
    @Html.Partial("_EnLotEveryDayMenuPartial", "熱門牌")
</div>
<hr />
<div class="container">
    <div>
        @using (Html.BeginForm("HotNumber", "EnLotEveryDay", FormMethod.Post, new { @role = "form", @class = "" }))
        {
            <div class="row">
                <div class="col-lg-6">
                    <div class="col-lg-6">
                        <label for="StartDate" class="form-label"><b>開始到結束期數</b></label>
                        <input type="text" class="form-control" readonly value="@ViewBag.Data">
                    </div>
                    <div class="col-lg-6">
                    </div>
                </div>
            </div>
            <div class="row" style="display:inline-block">
                <div class="mt-2 mb-2">
                    <label><b>點選期數：</b>@ViewBag.Message</label>
                </div>
                <div class="col-lg-12">
                    <input class="btn btn-warning" name="PeriodNum" type="submit" id="selectnum" value=10 />
                    <input class="btn btn-warning" name="PeriodNum" type="submit" id="selectnum" value=30 />
                    <input class="btn btn-warning" name="PeriodNum" type="submit" id="selectnum" value=60 />
                    <input class="btn btn-warning" name="PeriodNum" type="submit" id="selectnum" value=90 />
                    <input class="btn btn-warning" name="PeriodNum" type="submit" id="selectnum" value=All />
                </div>
            </div>

        }
    </div>
    <!------------------------------------------------------------------------------------->
    <br />
    <div class="row">
        <div class="col-md-3">
            <table class="table table-hover" style="width:100%">
                <thead style="background-color:#BBFFEE">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">號碼</th>
                        <th scope="col">次數</th>
                        <th scope="col">狀態</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        for (int i = 0; i < 10; i++)
                        {
                            <tr id="num_@(i + 1)">
                                <th scope="row">@(i + 1)</th>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Key</td>
                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Value</td>
                                <td>
                                    @{if (ViewBag.Data == 30)
                                        {
                                            if (Model.selectNumberCountListOrderBy.ElementAt(i).Value > Model.Hot30CountList[Model.selectNumberCountListOrderBy.ElementAt(i).Key])
                                            {
                                                <i class="fa fa-chevron-up text-success"></i>
                                            }
                                            else if (Model.selectNumberCountListOrderBy.ElementAt(i).Value == Model.Hot30CountList[Model.selectNumberCountListOrderBy.ElementAt(i).Key])
                                            {
                                                <i class="text-secondary"><b>-</b></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-chevron-down text-danger"></i>
                                            }
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-3">
            <table class="table table-hover" style="width:100%">
                <thead style="background-color:#BBFFEE">
                    <tr>
                        <th scope="col">#</th>
