                                <td>@Model.selectNumberCountListOrderBy.ElementAt(i).Value</td>
                                <td>
                                    @{if (ViewBag.Data == 30)
                                        {
                                            if (Model.selectNumberCountListOrderBy.ElementAt(i).Value > Model.Hot30CountList[Model.selectNumberCountListOrderBy.ElementAt(i).Key])
                                            {
                                                <i class="fa fa-chevron-up text-success"></i>
                                            }
                                            else if (Model.selectNumberCountListOrderBy.ElementAt(i).Value == Model.Hot30CountList[Model.selectNumberCountListOrderBy.ElementAt(i).Key])
                                            {
                                                <i class="text-secondary"><b>-</b></i>
                                            }
